[user]
	name = {{ .git.name }}
	email = {{ .git.email }}

[init]
	defaultBranch = main

[core]
	editor = nvim
	pager = delta
	excludesfile = ~/.gitignore_global

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = false
	side-by-side = true
	line-numbers = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[pull]
	rebase = false

[rebase]
	autostash = true
	autoSquash = true

[credential]
{{ if eq .chezmoi.os "darwin" }}
	helper = osxkeychain
{{ else }}
	helper = store
{{ end }}

[push]
	default = simple
	autoSetupRemote = true

[fetch]
	prune = true

[alias]
	graph = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)' --all
