# Ghostty Terminal Configuration

# Font configuration
font-family = JetBrainsMono NF
font-size = 18
font-thicken = true
font-thicken-strength = 0
adjust-cell-height = 6

# Window settings
window-decoration = false
window-padding-x = 8
window-padding-y = 6,0

# Cursor
cursor-style = underline
cursor-style-blink = true

# Selection/Copy behavior
copy-on-select = true

# macOS specific
macos-option-as-alt = true
confirm-close-surface = false

# Scrolling configuration for smoother scrolling
mouse-scroll-multiplier = 4

# Keybindings for word navigation (Alt+Left/Right)
keybind = alt+left=text:\x1bb
keybind = alt+right=text:\x1bf

# Include theme colors (managed by theme system)
config-file = themes/current.conf
