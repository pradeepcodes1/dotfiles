# EditorConfig - https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Lua uses tabs (Neovim convention)
[*.lua]
indent_style = tab
indent_size = 4

# Shell scripts
[*.{sh,zsh}]
indent_style = space
indent_size = 2

# Go uses tabs
[*.go]
indent_style = tab
indent_size = 4

# Python
[*.py]
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab

# Markdown
[*.md]
trim_trailing_whitespace = false

# TOML
[*.toml]
indent_size = 2
